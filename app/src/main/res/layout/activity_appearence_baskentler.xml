<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_appearence_baskentler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ozgur.wordi.AppearenceBaskentler"
    android:background="#086f1d">

    <TextView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvcumle"
        android:layout_marginLeft="90dp"
        android:textStyle="normal|bold"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fb0101"
        android:textColor="#000000"
        android:layout_below="@+id/tvsoru"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:text="Lokasyon"
        android:id="@+id/bncumle"
        android:background="@drawable/cim"
        android:textSize="10dp"
        android:layout_marginTop="250dp" />

    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="New ToggleButton"
        android:id="@+id/bncevap"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ok"
        android:paddingLeft="5dp"
        android:paddingRight="8dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/tvsoru"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentStart="false" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/wordi"
        android:background="@drawable/wordi" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/tvcevap"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="150dp" />

</RelativeLayout>
