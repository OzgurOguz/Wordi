<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_appearence__ulkeler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ozgur.wordi.AppearenceUlkeler"
    android:background="#086f1d">

    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="New ToggleButton"
        android:id="@+id/bncevap"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ok"
        android:paddingLeft="5dp"
        android:paddingRight="8dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:text="LOKASYON"
        android:id="@+id/bnsozluk"
        android:textSize="12dp"
        android:textStyle="bold|italic"
        android:background="@drawable/siz"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="210dp"
        android:id="@+id/tvsozluk"
        android:layout_marginLeft="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:background="#00ff00"
        android:textColor="#000000"
        android:layout_alignTop="@+id/bnsozluk" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:text="ÅžIK"
        android:id="@+id/bnsik"
        android:textStyle="bold|italic"
        android:background="@drawable/sik"
        android:layout_above="@+id/bncevap"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik1"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:layout_alignTop="@+id/bnsik"
        android:layout_alignStart="@+id/tvsozluk"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik2"
        android:layout_alignTop="@+id/tvsik1"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:layout_marginBottom="-15dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik3"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:layout_alignTop="@+id/tvsik4"
        android:layout_alignStart="@+id/tvsik1"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik4"
        android:layout_below="@+id/tvsik1"
        android:layout_alignEnd="@+id/tvsik2"
        android:layout_marginTop="10dp"
        android:textStyle="normal|bold"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:textColor="#000000"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/tvcevap"
        android:layout_alignTop="@+id/tvcumle"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/tvsoru"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:layout_below="@+id/wordi"
        android:layout_toEndOf="@+id/bnsozluk"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/wordi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/wordi" />

</RelativeLayout>
