<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_appearence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ozgur.wordi.Appearence"
    android:background="#086f1d">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/tvsoru"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvcevap"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/tvsoru"
        android:layout_alignEnd="@+id/tvsoru"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvcumle"
        android:background="#007fff"
        android:textColor="#000000"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="90dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="12dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/tvsozluk"
        android:layout_marginLeft="90dp"
        android:background="#00ff00"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="275dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik1"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="90dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik2"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="220dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik3"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="90dp"
        android:textSize="12dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvsik4"
        android:layout_marginTop="430dp"
        android:textStyle="normal|bold"
        android:gravity="center_vertical|center_horizontal"
        android:background="#fffc00"
        android:textColor="#000000"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="220dp"
        android:textSize="12dp" />

    <!-- ..................................................................... -->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:text="CUMLE"
        android:id="@+id/bncumle"
        android:background="#007fff"
        android:textSize="10dp"
        android:layout_marginTop="140dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:text="SOZLUK"
        android:id="@+id/bnsozluk"
        android:textSize="12dp"
        android:textStyle="bold|italic"
        android:background="#00ff00"
        android:layout_marginTop="290dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:text="ÅžIK"
        android:id="@+id/bnsik"
        android:textStyle="bold|italic"
        android:background="#fffc00"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="390dp" />

    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="New ToggleButton"
        android:id="@+id/bncevap"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ok"
        android:paddingLeft="5dp"
        android:paddingRight="8dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/wordi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/wordi" />

</RelativeLayout>
